<!-- Configuration file for the QuizMaster application -->

<config>
	<!-- The Quizfile to read answers from -->
	<param name="quizfile" value="quizfiles/futurama.xml"></param>
	
	<!-- Should the server start the registry? -->
	<param name="startregistry" value="true"></param>
	
	<!-- The time a user has for answering a question -->
	<param name="cycletime" value="4000"></param>
	
	<!-- Use Highscore feature, requires database -->
	<param name="highscore" value="true"></param>
	
	<!-- Data for DB access, if highscore feature is active -->
	<param name="dbhost" value="localhost"></param>
	<param name="dbname" value="quizmaster"></param>
	<param name="dbtable" value="highscore"></param>
	<param name="dbuser" value="quizmaster"></param>
	<param name="dbpass" value="quizpass"></param>
	
	<!-- How much information should the server send to the commandline? -->
	<param name="gossip" value="MODE_NO_DEBUG"></param>
	
</config>